from Tkinter import * #importing the Tkinter libraries
def quit():           #create a event when termination of the event is involved
import sys; sys.exit()

root = Tk( )          #creates a window called TK root widget
root.title('Wireless Measurement Tool V2.0')
lbl = Label(root, text="Press the button below to exit")
lbl.pack()
btn = Button(root, text="Quit", command=quit)
btn.pack() 10
root.mainloop( )
